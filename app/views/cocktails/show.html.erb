<h1><%= @cocktail.name %></h1>
<div class="container">
  <% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <br>
  <ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %>
    <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %> </li>
  <% end %>
  </ul>
</div>
<br>
<div class="container">
  <%= link_to '🍸 Add a ingredient', new_cocktail_dose_path(@cocktail.id) %>
  <br>
  <%= link_to '⬅️ Back to all the cocktails', root_path %>
</div>
